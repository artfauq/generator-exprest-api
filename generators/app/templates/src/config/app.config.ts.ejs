import convict from 'convict';
import dotenv from 'dotenv';
import moment from 'moment';
import { resolve } from 'path';
import 'moment/locale/<%= defaultLocale %>';

type NodeEnv = 'development' | 'production' | 'test';

const isDevelopment = process.env.NODE_ENV === 'development';
const isProduction = process.env.NODE_ENV === 'production';
const isTest = process.env.NODE_ENV === 'test';

/**
 * Load environment variables
 */
if (!isTest) {
  dotenv.config();
}

/**
 * Configure moment
 */
moment.locale('<%= defaultLocale %>');

const configSchema = convict({
  /**
   * Server config
   */
  port: {
    doc: 'Server port',
    format: 'port',
    env: 'PORT',
    default: 8080,
  },

  /**
   * Environment config
   */
  env: {
    doc: 'Application environment',
    format: ['development', 'production', 'test'],
    env: 'NODE_ENV',
    default: 'development' as NodeEnv,
  },
  debug: {
    doc: 'Debug mode',
    format: Boolean,
    env: 'DEBUG',
    default: false,
  },
  
  /**
   * Application config
   */
  assetsPath: {
    doc: 'Public assets path',
    format: String,
    default: resolve(process.cwd(), './public'),
  },<% if (winston) { %>
  logsDir: {
    doc: 'Application logs directory',
    format: String,
    default: resolve(process.cwd(), './logs'),
  },<% } %>
  publicHost: {
    doc: 'Public host of the server',
    format: 'url',
    env: 'PUBLIC_HOST',
    default: 'http://localhost:8080',
  },
  secret: {
    doc: 'App secret',
    format: String,
    env: 'SECRET',
    sensitive: true,
    default: isTest ? 'TEST_SECRET' : '',
  },
  version: {
    doc: 'Package version',
    format: String,
    env: 'npm_package_version',
    default: '',
  },<% if (sequelize) { %>

  /**
   * Database config
   */
  db: {
    host: {
      doc: 'Database host name / IP',
      format: String,
      env: 'DB_HOST',
      default: '127.0.0.1',
    },
    port: {
      doc: 'Database port',
      format: 'port',
      env: 'DB_PORT',
      default: <%= dialect.port %>,
    },
    username: {
      doc: 'Database username',
      format: String,
      env: 'DB_USER',
      default: isTest ? '<%= shortname %>-test' : '',
    },
    password: {
      doc: 'Database password',
      format: String,
      env: 'DB_PASSWORD',
      default: isTest ? '<%= shortname %>-test' : '',
    },
    database: {
      doc: 'Database name',
      format: String,
      env: 'DB_NAME',
      default: isTest ? '<%= shortname %>_test' : '',
    },
  },<% } %><% if (redis) { %>

  /**
   * Redis config
   */
  redis: {
    host: {
      doc: 'Redis host',
      format: String,
      env: 'REDIS_HOST',
      default: '127.0.0.1',
    },
    port: {
      doc: 'Redis port',
      format: 'port',
      env: 'REDIS_PORT',
      default: 6379,
    },
    password: {
      doc: 'Redis password',
      format: String,
      env: 'REDIS_PASSWORD',
      default: isTest ? '<%= shortname %>-test' : undefined,
    },
  },<% } %><% if (smtp) { %>

  /**
   * SMTP config
   */
  smtp: {
    host: {
      doc: 'SMTP host',
      format: String,
      env: 'SMTP_HOST',
      default: isTest ? 'TEST_SMTP_HOST' : '',
    },
    port: {
      doc: 'SMTP port',
      format: 'port',
      env: 'SMTP_PORT',
      default: 465,
    },
    user: {
      doc: 'SMTP user',
      format: String,
      env: 'SMTP_USER',
      default: isTest ? 'TEST_SMTP_USER' : '',
    },
    password: {
      doc: 'SMTP password',
      format: String,
      env: 'SMTP_PASSWORD',
      default: isTest ? 'TEST_SMTP_PASSWORD' : '',
    },
  },<% } %>
});

// Validate current config
configSchema.validate({ allowed: 'strict' });

export const config = {
  ...configSchema.getProperties(),

  // Export computed config properties
  isDevelopment,
  isProduction,
  isTest,
};

export type Config = typeof config;
