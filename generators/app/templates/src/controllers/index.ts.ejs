import Router from 'express-promise-router';
import morgan from 'morgan';
import config from '../config';
import logger from '../config/logger.config';<% if (auth) { %>
import authController from './auth.controller';<% } %><% if (sequelize) { %>
import usersController from './users.controller';<% } %>

const router = Router();

/**
 * HTTP request logging configuration
 */
router.use(
  morgan(config.isProduction ? 'combined' : 'dev', {
    stream: {
      write: message => logger.info(message.trim()),
    },
  }),
);

/**
 * API routes
 */
router.get('/', (req, res) => res.sendStatus(204));<% if (auth) { %>
router.use('/auth', authController);<% } %><% if (sequelize) { %>
router.use('/users', usersController);<% } %>

export default router;
