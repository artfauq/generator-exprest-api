      filterProperties: ['email', 'firstName', 'lastName', 'createdAt'],
      properties: {
        password: {
          type: 'password',
        },
      },
      sort: {
        direction: 'asc',
        sortBy: 'lastName',
      },
    },
  };

  return resource;
