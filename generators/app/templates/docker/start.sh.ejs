#!/bin/bash
set -e

ENV=$1

if [ -z "$ENV" ] || [[ "$ENV" != "dev"<% if (jest) { %> && "$ENV" != "test"<% } %> && "$ENV" != "prod" ]]; then
  echo "usage: ./start.sh <dev<% if (jest) { %>|test<% } %>|prod>"
  exit
fi

if [ "$ENV" = "dev" ]; then
  # Start development server
  docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build<% if (jest) { %>
elif [ "$ENV" = "test" ]; then
  # Start test server
  docker-compose -f docker-compose.test.yml up --build<% } %>
elif [ "$ENV" = "prod" ]; then
  # Start production server
  docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build
fi
